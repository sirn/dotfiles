server:
    access-control: 0.0.0.0/0 refuse
    access-control: 127.0.0.0/8 allow
    access-control: ::0/0 refuse
    access-control: ::1 allow
    access-control: ::ffff:127.0.0.1 allow

    logfile: ""
    use-syslog: no
    interface: 127.0.0.1
    port: 53

{% if ansible_os_family|lower == 'darwin' %}
    directory: "/usr/local/svcs/unbound/etc"
    pidfile: "/usr/local/svcs/unbound/etc/unbound.pid"
    chroot: "/usr/local/svcs/unbound"
    username: "nobody"
{% elif ansible_os_family|lower == 'archlinux' %}
    directory: "/etc/unbound"
    chroot: "/etc/unbound"
    username: "unbound"
{% endif %}
    do-daemonize: no
    do-not-query-localhost: no

forward-zone:
    name: "."
    forward-addr: 127.0.0.1@15353