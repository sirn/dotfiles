#!/bin/sh
#
# Find application setings that are safe to purge.
#

if [ $# -lt 1 ]; then
    printf >&2 "Usage: %s PATTERN" "$(basename "$0")"
    exit 1
fi

find "$HOME" \
    -iname '*'"$1"'*' \
    ! \( -path '*/.dotfiles*' \
     -or -path '*/.emacs.d*' \
     -or -path '*/.local/share/flatpak/*' \
     -or -path '*/.local/share/containers/*' \
     -or -path '*/.var/app*' \
     -or -path '*/Dev/*' \
     -or -path '*/Games/*' \
     -or -path '*/Nextcloud/*' \
     -or -path '*/Workspace/*' \
    \) \
    -prune
