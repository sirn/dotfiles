# focus window
shift + ctrl - h : chunkc tiling::window --focus west
shift + ctrl - j : chunkc tiling::window --focus south
shift + ctrl - k : chunkc tiling::window --focus north
shift + ctrl - l : chunkc tiling::window --focus east

# swap window
ctrl + shift + alt - h : chunkc tiling::window --swap west
ctrl + shift + alt - j : chunkc tiling::window --swap south
ctrl + shift + alt - k : chunkc tiling::window --swap north
ctrl + shift + alt - l : chunkc tiling::window --swap east

# set insertion point
shift + alt - f : chunkc tiling::window --use-insertion-point cancel
shift + alt - h : chunkc tiling::window --use-insertion-point west
shift + alt - j : chunkc tiling::window --use-insertion-point south
shift + alt - k : chunkc tiling::window --use-insertion-point north
shift + alt - l : chunkc tiling::window --use-insertion-point east

# resize window
ctrl + alt - 0 : chunkc tiling::desktop --equalize

# send window to desktop
ctrl + alt - left : chunkc tiling::window --send-to-desktop prev
ctrl + alt - right : chunkc tiling::window --send-to-desktop next
ctrl + alt - 1 : chunkc tiling::window --send-to-desktop 1
ctrl + alt - 2 : chunkc tiling::window --send-to-desktop 2
ctrl + alt - 3 : chunkc tiling::window --send-to-desktop 3
ctrl + alt - 4 : chunkc tiling::window --send-to-desktop 4
ctrl + alt - 5 : chunkc tiling::window --send-to-desktop 5

# rotate tree
ctrl + alt - r : chunkc tiling::desktop --rotate 90

# toggle window fullscreen
ctrl + alt - f : chunkc tiling::window --toggle fullscreen

# toggle window split type
ctrl + alt - e : chunkc tiling::window --toggle split

# float / unfloat window and center on screen
ctrl + alt - t :
    chunkc tiling::window --toggle float;\
    chunkc tiling::window --grid-layout 4:4:1:1:2:2

# fix screenshot
cmd + shift - 4 -> : chunkc border::clear

# change layout of desktop
ctrl + alt - a : chunkc tiling::desktop --layout bsp
ctrl + alt - s : chunkc tiling::desktop --layout monocle
ctrl + alt - d : chunkc tiling::desktop --layout float

# general options
.blacklist [
    "vmware fusion"
]
