#!/usr/bin/env ksh
#
# ~/.kshrc
#

## Aliases
##

alias ls='ls -G'

if command -v colorls >/dev/null; then
    alias ls="colorls -G"
fi

alias ll='ls -lh'
alias la='ls -alh'
alias gpg='gpg2'
alias sshi='ssh -F /dev/null -o UserKnownHostsFile=/dev/null'

if command -v emacsclient >/dev/null; then
    alias emacs='$HOME/.dotfiles/bin/emacsclient'
    EDITOR="$HOME/.dotfiles/bin/emacsclient"; export EDITOR
fi


## History
##

HISTFILE="$HOME/.ksh_history"; export HISTFILE
HISTSIZE=10000; export HISTSIZE


## GPG
##

if command -v gpg-connect-agent >/dev/null; then
    gpg-connect-agent updatestartuptty /bye >/dev/null
fi


## Prompt
##

case "$TERM" in
    xterm* | rxvt* ) PS1="\h \w \$ "; export PS1;;
    screen* ) PS1="\w \$ "; export PS1;;
    * ) PS1="\$ "; export PS1;;
esac
