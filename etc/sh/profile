#!/bin/sh
#
# ~/.profile
#

LC_ALL=${LC_ALL:-en_US.UTF-8}
LANG=${LANG:-en_US.UTF-8}
EDITOR="vi"
VISUAL="emacs"

export LC_ALL
export LANG
export EDITOR
export VISUAL

XDG_CONFIG_HOME=${XDG_CONFIG_HOME:-$HOME/.config}
XDG_CACHE_HOME=${XDG_CACHE_HOME:-$HOME/.cache}
XDG_DATA_HOME=${XDG_DATA_HOME:-$HOME/.local/share}
XDG_STATE_HOME=${XDG_STATE_HOME:-$HOME/.local/state}
XDG_DOWNLOAD_DIR=${XDG_DOWNLOAD_DIR:-$HOME/Downloads}
XDG_DESKTOP_DIR=${XDG_DESKTOP_DIR:-$HOME/Desktop}

export XDG_CONFIG_HOME
export XDG_CACHE_HOME
export XDG_DATA_HOME
export XDG_STATE_HOME
export XDG_DOWNLOAD_DIR
export XDG_DESKTOP_DIR


## Local bins
##

# shellcheck disable=SC2123
PATH=

prependpath() {
    case ":$PATH:" in
        *:"$1":*)
            ;;

        * )
            PATH="${1:+$1:}$PATH"
            ;;
    esac

    PATH=${PATH%%:}
}

# CUDA comes last because it has few binaries overriding /usr/bin
#

if [ -d /opt/cuda/bin ]; then
    prependpath "/opt/cuda/bin"
    prependpath "/opt/cuda/integration/nsight-compute"
    prependpath "/opt/cuda/integration/nsight-systems"
fi

# LaTeX
#

for texpath in /opt/texlive/*/bin/* /usr/local/texlive/*/bin/*; do
    if [ -d "$texpath" ]; then
        prependpath "$texpath"
        unset texpath
        break
    fi
done

# System bins
#

prependpath "/sbin"
prependpath "/usr/sbin"
prependpath "/bin"
prependpath "/usr/bin"

# Local bins
#

prependpath "/usr/local/sbin"
prependpath "/usr/local/bin"

# Opts
#

prependpath "/opt/bin"
prependpath "/opt/local/bin"

# Wrappers
#

prependpath "$HOME/.dotfiles/bin"
prependpath "$HOME/.dotfiles/libexec/wrapper"
prependpath "$HOME/.dotpriv/bin"


## GPG agent
##

if command -v gpgconf >/dev/null; then
    unset SSH_AGENT_PID

    if [ "${gnupg_SSH_AUTH_SOCK_by:-0}" -ne $$ ]; then
        SSH_AUTH_SOCK="$(gpgconf --list-dirs agent-ssh-socket)"
        export SSH_AUTH_SOCK
    fi
fi


## Nix
##

# shellcheck disable=SC1091
if [ -e /nix/var/nix/profiles/default/etc/profile.d/nix-daemon.sh ]; then
  . /nix/var/nix/profiles/default/etc/profile.d/nix-daemon.sh
fi


## ASDF
##

# shellcheck disable=SC1090,SC1091
if [ -d "$HOME/.asdf" ] && [ -z "$ASDF_DIR" ]; then
    . "$HOME/.asdf/asdf.sh"
fi


## PATHs
##

GOPATH=$HOME/Dev/go/gopath:$HOME/Dev
_gopaths=$GOPATH

while [ -n "$_gopaths" ]; do
    _gopath=${_gopaths%%:*}
    prependpath "$_gopath/bin"
    _gopaths=${_gopaths##"$_gopath"}
    _gopaths=${_gopaths#:}
done

unset _gopath
unset _gopaths

prependpath "$HOME/.local/bin"
prependpath "$HOME/.cabal/bin"
prependpath "$HOME/.cargo/bin"
prependpath "$HOME/.nimble/bin"
prependpath "$HOME/.cache/rebar3/bin"
prependpath "$HOME/.local/lib/google-cloud-sdk/bin"
prependpath "$HOME/.dotfiles/libexec/lsp"


## Local Customization files
##

# shellcheck disable=SC1090
for n in .profile2 .profile_local; do
    if [ -f "$HOME/$n" ]; then
        . "$HOME/$n"
    fi
done


## Cleanups
##

unset prependpath


## Finalizing
##

ENV="$HOME/.kshrc"

export ENV
export PATH
export GOPATH
